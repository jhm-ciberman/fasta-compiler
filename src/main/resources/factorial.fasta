factorial {

    LONG i, result, n;

    // Factorial of 10;
    n = 10_l;

    // Initialize the result in 1
    result = 1_l;

    // Initialize the counter in 2
    i = 2_l;

    IF (i < n) THEN
        BEGIN
        LOOP
            BEGIN
            result = result * i;
            i = i + 1_l;
            END
        UNTIL (i > n)
        END
    ENDIF

    PRINT('El factorial de ');
    PRINT(n);
    PRINT(' es ');
    PRINT(result);

}